{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "g++.exe - Build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\bin\\debug\\IssueTracker_d.exe",
            "args": [
                "${workspaceFolder}\\src\\**.cpp",
                "${workspaceFolder}\\src\\model\\**.cpp",
                "${workspaceFolder}\\src\\ui\\**.cpp",
                "-I${workspaceFolder}\\src\\include",
                "-o",
                "${workspaceFolder}\\bin\\debug\\IssueTracker_d.exe"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            // "miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe",
            "miDebuggerPath": "C:\\mingw64\\mingw64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++.exe DEBUG"
        }
    ]
}