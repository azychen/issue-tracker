{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++.exe DEBUG",
            "command": "C:\\mingw64\\mingw64\\bin\\g++.exe",
            "args": [
                "-g",
                "${workspaceFolder}\\src\\**.cpp",
                "${workspaceFolder}\\src\\model\\**.cpp",
                "-I${workspaceFolder}\\src\\include",
                // "-IC:\\Users\\anton\\Downloads\\lib\\include",
                // "-IC:\\Users\\anton\\Downloads\\lib\\include\\msvc",
                // "-LC:\\Users\\anton\\Downloads\\lib\\cmake\\debug\\lib",
                // "-lwx_mswud_core-3.1.dll",
                "-o",
                "${workspaceFolder}\\bin\\debug\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
