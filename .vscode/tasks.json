{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\mingw64\\mingw64\\bin\\g++.exe",
            "args": [
                "-g",
                "${workspaceFolder}\\src\\**.cpp",
                "${workspaceFolder}\\src\\model\\**.cpp",
                "-I${workspaceFolder}\\src\\include",
                // "${workspaceFolder}\\lib\\include",
                // "-L${workspaceFolder}\\lib\\gcc810_x64_dll",
                "-o",
                "${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}