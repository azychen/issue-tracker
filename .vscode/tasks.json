                // "-I${workspaceFolder}\\lib\\include\\msvc",
                // "-L${workspaceFolder}\\lib\\gcc810_x64_dll",
                "-o",
                "${workspaceFolder}\\bin\\release\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
